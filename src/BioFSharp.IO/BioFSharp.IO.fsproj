<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net45;net47;netstandard2.0</TargetFrameworks>
    <RootNamespace>BioFSharp.IO</RootNamespace>
    <AssemblyName>BioFSharp.IO</AssemblyName>
    <Name>BioFSharp.IO</Name>
    <OutputType>Library</OutputType>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <!-- Optional: Declare that the Repository URL can be published to NuSpec -->
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <!-- Optional: Embed source files that are not tracked by the source control manager to the PDB -->
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <!-- Optional: Include PDB in the built .nupkg -->
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="AssemblyInfo.fs" />
    <Compile Include="AgilentRaw.fs" />
    <Compile Include="BlastWrapper.fs" />
    <Compile Include="Clustal.fs" />
    <Compile Include="FastA.fs" />
    <Compile Include="FastQ.fs" />
    <Compile Include="GenBank.fs" />
    <Compile Include="GFF3.fs" />
    <Compile Include="Mgf.fs" />
    <Compile Include="Newick.fs" />
    <Compile Include="Obo.fs" />
    <Compile Include="OrthoMCL.fs" />
    <Compile Include="ClustalOWrapper.fs" />
    <Compile Include="WorkflowLanguage.fs" />
    <None Include="paket.references" />
  </ItemGroup>
  <ItemGroup>
	<ProjectReference Include="..\BioFSharp\BioFSharp.fsproj" />
  </ItemGroup>

  <!-- Placeholder -->
  <!-- common NuGet package refs that affect all projects -->
  <!-- Placeholder -->

  <!-- .NET45 references, compilation flags and build options -->
  <ItemGroup Condition=" '$(TargetFramework)' == 'net45' ">
    <Reference Include="FSharpAux">
      <HintPath>..\..\lib\FSharpAux\net45\FSharpAux.dll</HintPath>
    </Reference>
    <Reference Include="FSharpAux.IO">
      <HintPath>..\..\lib\FSharpAux\net45\FSharpAux.IO.dll</HintPath>
    </Reference>
  </ItemGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' == 'net45'">
    <DefineConstants>NET45;NETFULL</DefineConstants>
  </PropertyGroup>

  <!-- .NET45 references references, compilation flags and build options -->
  <ItemGroup Condition=" '$(TargetFramework)' == 'net47' ">
    <Reference Include="FSharpAux">
      <HintPath>..\..\lib\FSharpAux\net47\FSharpAux.dll</HintPath>
    </Reference>
    <Reference Include="FSharpAux.IO">
      <HintPath>..\..\lib\FSharpAux\net47\FSharpAux.IO.dll</HintPath>
    </Reference>
  </ItemGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' == 'net47'">
    <DefineConstants>NET47;NETFULL</DefineConstants>
  </PropertyGroup>

  <!-- .NET Standard 2.0 references, compilation flags and build options -->
  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard2.0' ">
    <Reference Include="netstandard2.0">
      <HintPath>..\..\lib\FSharpAux\netstandard2.0\FSharpAux.dll</HintPath>
    </Reference>
    <Reference Include="netstandard2.0">
      <HintPath>..\..\lib\FSharpAux\netstandard2.0\FSharpAux.IO.dll</HintPath>
    </Reference>
  </ItemGroup>
  <PropertyGroup Condition=" '$(TargetFramework)' == 'netstandard2.0'">
    <DefineConstants>NETCORE;NETSTANDARD;NETSTANDARD2_0</DefineConstants>
  </PropertyGroup>
  
  <Import Project="..\..\.paket\Paket.Restore.targets" />
</Project>
